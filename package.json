{
  "name": "baseline",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:browser": "npx webpack",
    "start": "npx webpack-dev-server",
    "start:server": "nodemon --exec npx babel-node ./src/api/index.js",
    "build": "npx webpack --env.production",
    "lint": "eslint --ext .js --ext .jsx . --cache",
    "test": "npx mocha --watch --require ./tests/mocha-setup.js ./src/**/test-*.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "app-ports": {
    "webpack-port": "8080",
    "node-port": "3000"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-destructuring",
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "module-resolver",
        {
          "alias": {
            "~": "./src/"
          }
        }
      ]
    ]
  },
  "author": "Philip Kuperberg",
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "browser": "true",
      "commonjs": "true",
      "es6": "true",
      "node": "true"
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": "true"
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "max-len": [
        2,
        80,
        4,
        {
          "ignoreStrings": true,
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreTemplateLiterals": true,
          "ignorePattern": "[ ]*<p>.*</p>"
        }
      ],
      "no-unused-vars": 0,
      "no-console": 0,
      "no-mixed-spaces-and-tabs": 0,
      "no-undef": 0,
      "no-inner-declarations": 0,
      "strict": 0
    }
  },
  "dependencies": {
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "autoprefixer": "^9.1.3",
    "babel-eslint": "^9.0.0",
    "chai": "^4.1.2",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.19",
    "colors": "^1.3.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint": "^5.4.0",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "font-awesome": "^4.7.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^12.0.0",
    "lodash": "^4.17.10",
    "memoize-one": "^4.0.2",
    "mocha": "^5.1.1",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.5",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^7.1.0",
    "sinon": "^6.1.5",
    "style-loader": "^0.23.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-destructuring": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "cssnano": "^4.1.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-notifier": "^1.6.0"
  }
}

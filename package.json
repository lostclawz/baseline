{
  "name": "baseline",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:browser": "npx webpack",
    "start": "npx webpack-dev-server --config ./webpack.dev.js",
    "start:server": "nodemon --exec npx babel-node ./src/api/index.js",
    "build": "npx webpack --config ./webpack.prod.js",
    "lint": "eslint --ext .js --ext .jsx . --cache",
    "test": "npx mocha --watch --require ./tests/mocha-setup.js ./src/**/test-*.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "app-ports": {
    "webpack-port": "8080",
    "node-port": "3000"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
       [
         "@babel/plugin-proposal-decorators",
         {
           "legacy": true
         }
       ],
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-destructuring",
      "@babel/plugin-proposal-class-properties",
      [
        "module-resolver",
        {
          "alias": {
            "~": "./src/"
          }
        }
      ]
    ]
  },
  "author": "Philip Kuperberg",
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "browser": "true",
      "commonjs": "true",
      "es6": "true",
      "node": "true"
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": "true"
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "max-len": [
        2,
        80,
        4,
        {
          "ignoreStrings": true,
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreTemplateLiterals": true,
          "ignorePattern": "[ ]*<p>.*</p>"
        }
      ],
      "no-unused-vars": 0,
      "no-console": 0,
      "no-mixed-spaces-and-tabs": 0,
      "no-undef": 0,
      "no-inner-declarations": 0,
      "strict": 0
    }
  },
  "dependencies": {
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.0.0",
    "chai": "^4.2.0",
    "classnames": "^2.2.5",
    "colors": "^1.3.3",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "express": "^4.16.4",
    "font-awesome": "^4.7.0",
    "jsdom": "^13.1.0",
    "lodash": "^4.17.11",
    "memoize-one": "^4.1.0",
    "mocha": "^5.1.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "prop-types": "^15.6.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-hot-loader": "^4.6.0",
    "react-redux": "^6.0.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "reselect": "^4.0.0",
    "sinon": "^7.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-decorators": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-destructuring": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.4.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.0.1",
    "cssnano": "^4.1.7",
    "eslint": "^5.10.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "postcss-loader": "^3.0.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.5",
    "webpack-notifier": "^1.7.0",
    "webpack-shell-plugin": "^0.5.0"
  }
}
